// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url  	    = env("DATABASE_URL")
}


model User {
  id       Int     @id @default(autoincrement())
  fileNo    Int   @unique
  name      String
  password String
  role      Role     @default(WORKER)
  createdAt DateTime @default(now())
  actions   Action[]
}

enum Role {
  MANAGER
  WORKER
}

model Action {
    id       Int     @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  type      String
  note      String?
  createdAt DateTime @default(now())
}

model Material {
   id       Int     @id @default(autoincrement())
  description String
  photoUrl    String?
  quantity    Int      @default(0)
  lastUpdate  DateTime @updatedAt
  unit       String
  events      Event[]
}

model Event {
    id       Int     @id @default(autoincrement())
  type       EventType
 quantity        Int
  note       String?
  // user       User?    @relation(fields: [userId], references: [id])
  // userId     String?
  material   Material @relation(fields: [materialId], references: [id])
  materialId Int
  createdAt  DateTime @default(now())
}

enum EventType {
  RECEIVE
  WITHDRAW
}
